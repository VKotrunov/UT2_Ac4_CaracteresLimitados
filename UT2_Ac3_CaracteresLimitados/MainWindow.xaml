<Window x:Class="UT2_Ac3_CaracteresLimitados.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UT2_Ac3_CaracteresLimitados"
        mc:Ignorable="d"
        Title="Caracteres limitados" Height="350" Width="550"
        Icon="letra.ico"
        >
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFF5B5B" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFFF9292" Offset="0.289"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="250" Margin="20,20,20,20" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="510" TextChanged="inputTextBox_TextChanged" AcceptsReturn="True"/>
        <TextBlock x:Name="caracteresTextBlock" Margin="480,280,0,0" TextWrapping="Wrap" Text="0/140" VerticalAlignment="Top" FontSize="14" Foreground="#FF636363"/>

    </Grid>
</Window>
